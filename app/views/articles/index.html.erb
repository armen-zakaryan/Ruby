<div class="container">
    <p class="panel-title panel">
      <strong>The number of articles are</strong>
      <%= @articles.length %>
    </p>

    <h1>Listing Articles</h1>
    <%= link_to 'New article', new_article_path %>
    <table class="table table-bordered">
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>

      <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td><div class="trash-container"><%= link_to '', article_path(article), class: 'glyphicon glyphicon-trash',
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %></div></td>
          </tr>
      <% end %>
    </table>
</div>