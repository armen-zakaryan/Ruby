<div class="container h-login">
  <% @page_title = "Login" %>

  <div class="row">
    <div class="col-md-4 col-md-offset-7">
      <div class="panel panel-default">
        <div class="panel-heading"> <strong class="">Login</strong></div>
        <div class="panel-body">

        <%= form_tag(:action => 'attempt_login') do %>
          <form class="form-horizontal" role="form">
            <div class="form-group">
              <%= label_tag(:username, nil, for:"inputEmail3", class:"col-sm-3 control-label") %>
              <div class="col-sm-9">
                <%= text_field_tag(:username, nil, class:"form-control", id: "inputEmail3", placeholder: "Email", required:"") %>
              </div>
            </div>
            <div class="form-group">
              <td><%= label_tag(:password, nil, for:"inputPassword3", class:"col-sm-3 control-label") %></td>
              <div class="col-sm-9">
                <td><%= password_field_tag(:password, nil, type:"password", class:"form-control", id:"inputPassword3", placeholder:"Password", required:"") %></td>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-9">
                <div class="checkbox">
                  <label class="">
                    <input type="checkbox" class="">Remember me</label>
                </div>
              </div>
            </div>
            <div class="form-group last">
              <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-success btn-sm">Sign in</button>
                <button type="reset" class="btn btn-default btn-sm">Reset</button>
              </div>
            </div>
          </form>
        <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
