    <% (0..5).step do |img_number| %>
    <li data-target="#carousel-example-generic" data-slide-to="img_number" class="<%= 'active' if img_number == 0 %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
      <% (1..6).step do |img| %>
          <div class="item <%= 'active' if img == 1 %>">
            <img src="/images/cover-photos/<%= img %>.jpg" alt="...">
            <div class="carousel-caption">
            </div>
          </div>
      <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
